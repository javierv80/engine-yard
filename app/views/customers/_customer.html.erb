<table class="table table-striped table-bordered">
	<tr>
		<th>Telefono</th>
		<th>Nombre</th>
		<th>Calle</th>
		<th>Numero</th>
		<th>Departamento</th>
		<th>Actions</th>
	</tr>

	<% @customers.each do | customer |%>
	<tr>
		<td><%= customer.phone %></td>
		<td><%= customer.name %></td>
		<td><%= customer.street %></td>
		<td><%= customer.number %></td>
		<td><%= customer.department %></td>

		<td><%= link_to "Ver", customer_path(customer)%>
		<%= link_to "Editar", edit_customer_path(customer)%>
		<%= link_to 'Borrar', customer, :method => 'delete', class: 'btn btn-danger btn-mini', data: { confirm: 'Estas seguro?'}%></td>
		
		
	</tr>
	<% end %>
</table>

<% if action_name == 'search' %>
	<p><%= link_to "Volver", customers_path%></p>
<% end %>